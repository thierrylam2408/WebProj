{% block form %}
<div class="row" style="margin-top:70px">
    <h2 class="text-center">Statistiques</h2>
          <div class="panel panel-default">
            <div class="panel-body" style="text-align: center"><strong>{{nbJoueur}}</strong> Joueurs se sont inscrits sur notre jeu</div>
          </div>
    <div class="col-md-6">
        <div class="panel-group" >
          <div class="panel panel-default">
            <div class="panel-body"><strong>{{nbGroupe}}</strong> Groupes créés</div>
          </div>
          <div class="panel panel-default">
            <div class="panel-body"><strong>{{expMax[0]}}</strong> est le groupe avec le plus d'expériences: <strong>{{expMax[1]}}</strong></div>
          </div>
          <div class="panel panel-default">
            <div class="panel-body"><strong>{{hommeMax[0]}}</strong> est le groupe avec le plus de personnages: <strong>{{hommeMax[1]}}</strong></div>
          </div>
          <div class="panel panel-default">
            <div class="panel-body"><strong>{{argMax[0]}}</strong> est le groupe avec le plus d'argent: <strong>{{argMax[1]}}$</strong></div>
          </div>
          <div class="panel panel-default">
            <div class="panel-body"><strong>{{expMoyen}}</strong> est la moyenne d'experience par groupe</div>
          </div>
          <div class="panel panel-default">
            <div class="panel-body"><strong>{{argMoyen}}$</strong> est la moyenne d'argent par groupe</div>
          </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel-group" >
          <div class="panel panel-default">
            <div class="panel-body"><strong>{{niveauMax[0]}}</strong> est le personnage le plus fort avec <strong>{{niveauMax[1]}}</strong> de niveau</div>
          </div>
          <div class="panel panel-default">
            <div class="panel-body"><strong>{{niveauMoyen}}</strong> est le niveau moyen des personnages</div>
          </div>
          <div class="panel panel-default">
            <div class="panel-body"><strong>{{pourcentageH}}%</strong> sont des hommes, <strong>{{pourcentageF}}%</strong> sont des femmes</div>
          </div>
          <div class="panel panel-default">
            <div class="panel-body"><strong>{{Missions}}</strong> est le nombre de missions effectuées</div>
          </div>
          <div class="panel panel-default">
            <div class="panel-body"><strong>{{pourcentageLO[0]}}%</strong> des personnages sont en attente d'une mission</div>
          </div>
          <div class="panel panel-default">
            <div class="panel-body"><strong>{{pourcentageLO[1]}}%</strong> des personnages sont actuellement en mission</div>
          </div>
        </div>
    </div>
</div>

    

{% endblock %}


        