{% extends "PWMyBundle::layout.html.twig" %}

	{% block title %}
		Bienvenue
	{% endblock %}
	{% block body %}
		<div class = "container">
	      <div class="wrapper">
	        <form action="" method="post" name="Login_Form" class="form-signin">
	        	<div class="jumbotron">
	        		<div class="col-md-8">
	        			<h3 class="form-signin-heading">Bienvenue sur le site de KENYLAM Game!</h3>
	        		</div> 
		            <hr class="colorgraph"><br>
		            <div class="col-md-6">
		            	<h3 class="form-signin-heading">Connectez vous!</h3>
		              	{% block login%}
			                {% if erreurCo is defined %}
								{{ erreurCo }}
							{% endif %}
							{{form_start(connexion)}}
							{{form_widget(connexion)}}
							{{form_end(connexion)}}
							{% if erreurIns is defined %}
								{{ erreurIns }}
							{% endif %}  
		              	{% endblock %}
		            </div>
		            <div class="col-md-6" >
		            	<h3 class="form-signin-heading">Inscription! </h3>
		            	{% block register%}
			                  {% if reussiIns is defined %}
								{{ reussiIns }}
							{% endif %}
							{{form_start(inscription)}}
							{{form_widget(inscription)}}
							{{form_end(inscription)}}
			            {% endblock %}
		            </div>     
		        </div> 
	        </form>     
	      </div>
	    </div>
	{% endblock %}
	