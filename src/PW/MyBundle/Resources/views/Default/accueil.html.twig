{% extends "PWMyBundle::layout.html.twig" %}

	{% block title %}
		Bienvenue
	{% endblock %}
	{% block body %}
		<div class = "container">
	      <div class="wrapper">
	        <form action="" method="post" name="Login_Form" class="form-signin">
	            <h2 class="form-signin-heading">Bienvenue sur le site de KENYLAM Game!</h2>
	            <h3 class="form-signin-heading">Connectez vous s'il vous plait!</h3>
	            <hr class="colorgraph"><br>
	              {% block login%}
	                {% if erreurCo is defined %}
						{{ erreurCo }}
					{% endif %}
					{{form_start(connexion)}}
					{{form_widget(connexion)}}
					{{form_end(connexion)}}
					{% if erreurIns is defined %}
						{{ erreurIns }}
					{% endif %}  
	              {% endblock %}      
	        </form>     
	      </div>
	    </div>
	    <div class = "container">
	      <div class="wrapper">
	        <form action="" method="post" name="Login_Form" class="form-signin">       
	            <h3 class="form-signin-heading">Inscription! </h3>
	            <hr class="colorgraph"><br>
	              {% block register%}
	                  {% if reussiIns is defined %}
						{{ reussiIns }}
					{% endif %}
					{{form_start(inscription)}}
					{{form_widget(inscription)}}
					{{form_end(inscription)}}
	              {% endblock %}      
	        </form>     
	      </div>
	    </div> 
	{% endblock %}
	